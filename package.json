{
  "name": "heart-of-glass",
  "version": "2.0.0",
  "description": "Application ludopedagogique avec capteurs IMU et synthese audio",
  "main": "src/adapters/primary/electron/main/index.js",
  "author": "David Arnaud <davidarnaud001@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "test": "jest",
    "test:unit": "jest --testMatch='**/tests/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.js'",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "IMU",
    "audio",
    "education",
    "electron",
    "bluetooth"
  ],
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "electron": "^28.1.0",
    "electron-store": "^8.1.0",
    "events": "^3.3.0",
    "lamejs": "^1.2.1",
    "uuid": "^9.0.1",
    "web-audio-api": "^0.2.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4"
  }
}
